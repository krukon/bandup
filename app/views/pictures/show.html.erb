<div class="container">
  <div class="row">
    <div class="span8 offset2">
      <h3><%= @picture.title %></h3>
      <p>
        <small>
          By <%= link_to @picture.artist.get_printable_name, artist_path(id: @picture.artist.username) %>
        </small>
      </p>
      <p>
        <%= link_to raw("<i class=\"icon icon-arrow-left\"> </i>Back to pictures"),
          @back_path, class: "btn" %>
        <% if picture_owner? @picture then %>
          <%= link_to raw("<i class=\"icon icon-edit\"> </i>Edit picture"),
            edit_picture_path(@picture), class: "btn btn-primary" %>
          <%= link_to raw("<i class=\"icon icon-trash\"> </i>Delete picture"),
            picture_path(@picture), class: "btn btn-danger",
            method: :delete, confirm: "Are you sure?" %>
        <% end %>
      </p>
      <p><%= image_tag @picture.picture.url, alt: @picture.title %></p>
      <p>
        <%= display_string @picture.description %>
      </p>
    </div>
  </div>
</div>