<ul class="icons-ul">
  <% @band.artists.each do |e| %>
    <li class="band-member">
      <%= image_tag e.get_profile_picture(:thumb), alt: e.get_printable_name %>
      <% link_text = e.get_full_name %>
      <% link_text = e.username if link_text.blank? %>
      <%= link_to link_text, artist_path(id: e.username) %>
      <%= link_to(icon("trash") + "Remove from band",
            remove_artist_from_band_path(id: @band.page, username: e.username),
            method: :delete,
            class: "pull-right btn btn-small btn-danger") unless e == current_user %>
    </li>
  <% end %>
</ul>