<div class="container">
  <div class="row">
    <div class="span12">
      <h1><%= @band.name %></h1>
      <% if owner? @band then %>
        <%= link_to "Edit", edit_band_path(id: @band.page) %>
      <% end %>
      <% unless member? @band or requested? @band %>
        <%= link_to "Try to join the band!", join_request_path(id: @band.page),
                method: :post %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <p><%= @band.about %></p>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <% if @band.artists.count > 0 then %>
        <ul class="icons-ul">
          <% for rel in @band.artist_relations do %>
            <li>
              <i class="icons-li icon-user"></i>
              <%= link_to rel.artist.username,
                      controller: :artists,
                      action: :show,
                      id: rel.artist.username %>
              <%= " (owner)" if rel.owner %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>