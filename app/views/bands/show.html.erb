<div class="container">
  <div class="row">
    <div class="span12">
      <h1><%= @band.name %></h1>
      <% if owner? @band then %>
        <%= link_to "Edit", edit_band_path(id: @band.page) %><br/>
        <%= link_to "Membership requests", band_requests_path(id: @band.page) %>
      <% end %>
      <% unless member? @band or requested? @band %>
        <%= link_to "Try to join the band!", send_band_request_path(id: @band.page),
                method: :post %>
      <% end %>
      <% if member? @band then %>
        <%= link_to "Leave this band", leave_band_path(id: @band.page),
                class: "btn btn-small btn-danger",
                method: :delete %> 
      <% end %>
      <br/>
      <%= link_to "See the members of this band", band_members_path %>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <p><%= @band.about %></p>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <% if @band.artists.count > 0 then %>
        <ul class="icons-ul">
          <% for rel in @band.artist_relations do %>
            <li>
              <i class="icons-li icon-user"></i>
              <%= link_to rel.artist.username,
                      controller: :artists,
                      action: :show,
                      id: rel.artist.username %>
              <%= " (owner)" if rel.owner %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>