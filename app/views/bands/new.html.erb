<div class="row">
  <div class="span8 offset2">
    <h1>Create new Band</h1>
    <%= form_for(@band, url: { action: :create }) do |f| %>
      <%= render 'form_errors', object: f.object %>
      <%= f.label :name, "Name of the Band" %>
      <%= f.text_field :name %>

      <%= f.label :page, "Link to the Band's page" %>
      <%= f.text_field :page %>

      <%= f.label :established %>
      <%= f.date_field :established %>

      <%= f.submit "Create band!", class: "btn btn-large btn-primary btn-submit" %>
    <% end %>
</div>
</div>